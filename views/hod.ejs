<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>HOD Page - <%= department %></title>
  <link rel="stylesheet" href="/stylesheets/hodstyle.css">
</head>
<body>
  <div class="App">
    <h1>HOD Page - <%= department %></h1>
    <div id="formContainer">
      <table id="courseTable">
        <thead>
          <tr>
            <th>Course Name</th>
            <th>Course ID</th>
            <th>No. of Students</th>
            <th>Credits</th>
            <th>Semester</th>
            <th>Course Type</th>
            <th>Sharing Type</th>
            <th>Professors</th>
            <th>Program</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach((course, index) => { %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.courseCode %></td>
            <td>
              <ul class="students-list">
                <% Object.entries(course.numberOfStudents).forEach(([dept, count]) => { %>
                <li><%= dept %>: <%= count %></li>
                <% }) %>
              </ul>
            </td>
            <td><%= course.credits %></td>
            <td><%= course.semester %></td>
            <td><%= course.courseType %></td>
            <td>
              <select class="sharing-type-select">
                <option value="">Select Sharing Type</option>
                <option value="Vertical">Vertical</option>
                <option value="Horizontal">Horizontal</option>
              </select>
            </td>
            <td>
              <button class="addProfessorButton" type="button">
                Add Professor
              </button>
            </td>
            <td><%= course.program %></td>
            <td>
              <button class="save-button" data-index="<%= index %>">
                Save
              </button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      
      <button id="HodSend">Submit</button>
      
      <!-- Logout button -->
      <form action="/logout" method="POST">
        <button type="submit">Logout</button>
      </form>
    </div>
  </div>
  <script src="/javascripts/hodscript.js"></script>
</body>
</html>
